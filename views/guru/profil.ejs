        <!-- Page content -->
        <div class="container-fluid mt--7">
            <div class="row">
                <div class="col-xl-12 order-xl-1">
                    <div class="card bg-secondary shadow">
                        <form action="/guru/profil" method="POST">
                            <div class="card-header bg-white border-0">
                                <div class="row align-items-center">
                                    <div class="col-8">
                                        <h3 class="mb-0">Detail Data <%= namaLengkap %></h3>
                                    </div>
                                    <div class="col-4 text-right">
                                        <button type="submit" class="btn btn-primary notika-btn-primary">Update Data
                                            Guru</button>
                                        <input type="hidden" name="_method" value="PUT" />
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <form>
                                    <h6 class="heading-small text-muted mb-4">Informasi Guru.</h6>
                                    <div class="pl-lg-4">
                                        <div class="row">
                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-username">ID
                                                        Guru</label>
                                                    <input type="text" class="form-control form-control-alternative"
                                                        name="id" value="<%= id %>" readonly>
                                                </div>
                                            </div>
                                            <div class="col-lg-8">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-email">Nama
                                                        Lengkap</label>
                                                    <input type="text" class="form-control form-control-alternative"
                                                        name="namaLengkap" placeholder="Nama Lengkap"
                                                        value="<%= namaLengkap %>" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-first-name">Tempat
                                                        Lahir</label>
                                                    <input type="text" class="form-control form-control-alternative"
                                                        name="tempatLahir" value="<%= tempatLahir %>"
                                                        placeholder="Tempat Lahir">
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-last-name">Tanggal
                                                        Lahir</label>
                                                    <input type="date" name="tanggalLahir"
                                                        class="form-control form-control-alternative"
                                                        value="<%= tanggalLahir %>" placeholder="Tanggal Lahir">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-first-name">Jenis
                                                        Kelamin</label>
                                                    <input type="text" class="form-control form-control-alternative"
                                                        name="jenisKelamin" value="<%= jenisKelamin %>"
                                                        placeholder="Jenis Kelamin" readonly>
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="form-control-label"
                                                        for="input-last-name">Agama</label>
                                                    <input type="text" class="form-control form-control-alternative"
                                                        name="agama" value="<%= agama %>" placeholder="Agama" readonly>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr class="my-4" />
                                    <!-- Address -->
                                    <h6 class="heading-small text-muted mb-4">Informasi Kontak Guru.</h6>
                                    <div class="pl-lg-4">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-address">Alamat</label>
                                                    <input class="form-control form-control-alternative" name="alamat"
                                                        value="<%= alamat %>" placeholder="Alamat" type="text" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-address">Nomor
                                                        Telefon</label>
                                                    <input class="form-control form-control-alternative"
                                                        name="nomorTelefon" placeholder="Nomor Telefon" type="number"
                                                        value="<%= nomorTelefon %>" required>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr class="my-4" />
                                    <!-- Credential -->
                                    <h6 class="heading-small text-muted mb-4">Informasi Login Guru.</h6>
                                    <div class="pl-lg-4">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-address">Email</label>
                                                    <input class="form-control form-control-alternative" name="email"
                                                        placeholder="Email" type="email" value="<%= email %>" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="form-control-label"
                                                        for="input-address">Password</label>
                                                    <input class="form-control form-control-alternative" name="password"
                                                        placeholder="Password" type="password" value="<%= password %>"
                                                        required>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Footer -->
            <footer class="footer">
                <div class="row align-items-center justify-content-xl-between">
                    <div class="col-xl-6">
                        <div class="copyright text-center text-xl-left text-muted">
                            &copy; 2020 <a class="font-weight-bold ml-1">Tiara Bunda</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
