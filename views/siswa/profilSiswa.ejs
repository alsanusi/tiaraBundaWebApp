                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-address">Wali
                                                        Kelas</label>
                                                    <input class="form-control form-control-alternative"
                                                        name="waliKelas" placeholder="Wali Kelas"
                                                        value="<%= waliKelas %>" readonly>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>Status</label>
                                            <input class="form-control form-control-alternative" placeholder="Status"
                                                name="status" value="<%= status %>" type="text" readonly>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Footer -->
