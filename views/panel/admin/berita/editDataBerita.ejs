        <!-- Page content -->
        <div class="container-fluid mt--7">
            <div class="row">
                <div class="col-xl-12 order-xl-1">
                    <div class="card bg-secondary shadow">
                        <form name="tambahDataGuru" action="/panel/tambahDataGuru" method="POST"
                            enctype="multipart/form-data">
                            <div class="card-header bg-white border-0">
                                <div class="row align-items-center">
                                    <div class="col-8">
                                        <h3 class="mb-0">Form Berita</h3>
                                    </div>
                                    <div class="col-4 text-right">
                                        <button type="submit" class="btn btn-primary notika-btn-primary">Tambah
                                            Berita</button>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <form>
                                    <h6 class="heading-small text-muted mb-4">Header Berita.</h6>
                                    <div class="pl-lg-4">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="form-group">
                                                    <label class="form-control-label"
                                                        for="input-username">Gambar</label>
                                                    <input type="file" class="form-control form-control-alternative"
                                                        name="gambarBerita" accept="" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-email">Judul
                                                        Berita</label>
                                                    <input type="text" class="form-control form-control-alternative"
                                                        name="judulBerita" placeholder="Judul Berita" required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="form-control-label" for="input-first-name">Tanggal
                                                        Update</label>
                                                    <input type="date" id="input-first-name"
                                                        class="form-control form-control-alternative"
                                                        name="tanggalUpdate" placeholder="Tanggal Update">
                                                </div>
                                            </div>
                                            <div class="col-lg-6">
                                                <div class="form-group">
                                                    <label class="form-control-label"
                                                        for="input-last-name">Penulis</label>
                                                    <input type="text" id="input-last-name" name="penulis"
                                                        class="form-control form-control-alternative"
                                                        placeholder="Penulis">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr class="my-4" />
                                    <!-- Description -->
                                    <h6 class="heading-small text-muted mb-4">Detail Berita</h6>
                                    <div class="pl-lg-4">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-last-name">Deskripsi
                                                Berita</label>
                                            <textarea rows="4" class="form-control form-control-alternative"
                                                placeholder="Deskripsi Berita." name="deskripsiBerita"></textarea>
                                        </div>
                                    </div>
                                </form>
                            </div>
