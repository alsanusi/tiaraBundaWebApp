            <!-- Table -->
            <div class="row" style="margin-top: 40px;">
                <div class="col">
                    <div class="card shadow">
                        <div class="card-header border-0">
                            <h3 class="mb-0">List Mata Pelajaran</h3>
                        </div>
                        <div class="table-responsive">
                            <table class="table align-items-center table-flush">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">Id</th>
                                        <th scope="col">Mata Pelajaran</th>
                                        <th scope="col">Kategori Pelajaran</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Data -->
                                    <% if(listKelas) { %>
                                    <% listKelas.forEach((data, i) => { %>
                                    <tr>
                                        <th scope="row">
                                            <span class="mb-0 text-sm"><%= i + 1 %></span>
                                        </th>
                                        <td>
                                            <%= data.mapel %>
                                        </td>
                                        <td>
                                            <%= data.category %>
                                        </td>
                                        <td class="text-right">
                                            <div class="dropdown">
                                                <a class="btn btn-sm btn-icon-only text-light" href="#" role="button"
                                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    <i class="fas fa-ellipsis-v"></i>
                                                </a>
                                                <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                                    <form action="/panel/editMapel/<%= data.id %>" method="POST">
                                                        <form method="POST" action="/panel/editMapel/<%= data.id %>"
                                                            style="float:right">
                                                            <button type="submit" name="delete" value='Delete'
                                                                onClick="return confirm('Hapus Mata Pelajaran <%= data.mapel %> ?')"
                                                                class="btn"
                                                                style="background-color: unset; width: 100%; text-align: left; color: #f5365c;">Hapus
                                                                Mata Pelajaran </button>
                                                            <input type="hidden" name="_method" value="DELETE" />
                                                        </form>
                                                    </form>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }) %>
